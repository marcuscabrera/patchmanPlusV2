# Django core configuration
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,web
DJANGO_DB_NAME=/var/lib/patchman/db/patchman.db

# Default administrative user created automatically by the entrypoint
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# Celery / Redis integration
CELERY_BROKER_URL=redis://redis:6379/0

# Toggle to run Django under gunicorn instead of runserver if desired
PATCHMAN_RUN_GUNICORN=False
